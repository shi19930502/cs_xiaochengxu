/* pages/goods/goods.wxss */
#goods{
margin-bottom: 30rpx;
}
.list{
  padding: 30rpx 0 30rpx 30rpx;
  display: flex;
}
.list_img{
  width: 160rpx;
  height: 140rpx;
  margin:0 29rpx 0 0rpx;
  border-radius: 8rpx;
  flex-grow: 0;
}
.list_children{
  width: 200rpx;
  flex: 1;
  color: rgba(102, 102, 102, 1);
  font-weight: 500;
  font-family: 'PingFang-SC-Medium';
  font-size: 24rpx;
  padding-right: 30rpx;
  padding-bottom: 36rpx;
  border-bottom: 1px solid rgba(225, 225, 225, 1);
}
.list_name{
  color: rgba(0, 0, 0, 1);
  font-weight: bold;
  padding-top: 6rpx;
  font-size: 32rpx;
}
.list_code{
  padding: 11rpx 0 3rpx 0;
  display: flex;
  /* align-items: center; */
}
.list_code_img{
  margin-right: 10rpx;
  width: 26rpx;
  height: 20rpx;
  margin-top: 10rpx;
}
.list_code_c{
  flex: 1;
}
.list_qk_name{
  display: flex;
  justify-content: space-between;
}
.list_qk_name_left{
  display: flex;
  flex: 1;
}
.list_qk_name_left_left{
  margin-right: 18rpx;
  flex-grow: 0;
  color: rgba(102, 102, 102, 1);
}
.list_qk_name_left_right{
  width: 200rpx;
  flex: 1;
  text-align: center;
}
.list_qk_name_right{
  width: 150rpx;
  text-align: right;
}