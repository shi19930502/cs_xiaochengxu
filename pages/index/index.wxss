/* pages/index/index.wxss */
.index{
  width: 100%;
  background: rgba(54, 140, 203, 1);
}
.index image,.index .btn{
  position: relative;
  z-index: 2;
}
.index_img_bg{
  width: 100%;
  height: 100%;
  position: absolute !important;
  z-index: 1;
  top: 0;
  left: 0;
}
.index_img_1{
  width: 518rpx;
  height: 231rpx;
  margin: 58rpx auto 41rpx;
}
.index_img_2{
  width: 577rpx;
  height: 54rpx;
  margin: auto;
}
.index_img_3{
  width: 509rpx;
  height: 326rpx;
  margin: 15rpx 0 61rpx 202rpx;

}
.index_img_4{
  width: 532rpx;
  height: 39rpx;
  margin: 0 auto 71rpx;
}
.btn{
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
}
.btn:last-child{
  margin-top: 30rpx;
}
.btn image{
  width: 72rpx;
  height: 72rpx;
  margin-right: 11rpx;
}
.btn_children{
  background: white;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx 24rpx 30rpx;
  width: 270rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #453D52;
}
