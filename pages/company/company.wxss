.company{
  background: rgba(246, 246, 246, 1);
  height: 100%;
}
.header_img {
  position: relative;
  width: 100%;
  height: 334rpx;
}

.img_banner {
  width: 100%;
  height: 334rpx;
}

.img_banner_text {
  width: 560rpx;
  height: 58rpx;
  position: absolute;
  z-index: 2;
  top: 109rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.list_father {
  background: rgba(255, 255, 255, 0);
  position: relative;
  z-index: 3;
  width: 100%;
