}
.list_name{
  font-size: 32rpx;
  font-weight: bold;
}
.list_addr{
  color: rgba(102, 102, 102, 1);
}
.list_img {
  margin-right: 14rpx;
  width: 129rpx;
  height: 129rpx;
  flex-grow: 0;
  border-radius: 50%;
}

.list_right {
  flex: 1;
}

.list_tel {
  display: flex;
  align-items: center;
}

.tel_img {
